# Backend Environment Variables (Local Development)
# Copy this file to .env in the backend/ directory

# Database connection
DATABASE_URL=postgresql://postgres:dev123@localhost:5432/pathology_study

# JWT Authentication (CHANGE THIS IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=local-development-secret-key-change-for-production

# Server configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS - must match your frontend deployment URL)
# Development: http://localhost:5173
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173
